 */
function ac_ubercart_catalog_browse($tid = 0) {
  $build = array();
  //if ($terms = views_get_view('uc_catalog_terms')) {
  //  $build['terms'] = array(
  //    '#markup' => $terms->preview('default', array($tid)),
  //  );
  //}
  
